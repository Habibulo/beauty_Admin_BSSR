<!DOCTYPE html>
<html lang="en" data-theme="dark">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Product Management</title>
    <link rel="stylesheet" href="../public/css/product.css">
</head>
<body>

    <div class="container">
        <h1>Product Management</h1>

        <!-- Table of Products -->
        <div class="table-container">
            <table id="productTable">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Product Image</th>
                        <th>Product Name</th>
                        <th>Product Type</th>
                        <th>Product Volume</th>
                        <th>Product Price</th>
                        <th>Product Left</th>
                        <th>Count</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody>
                    <!-- Example Products -->
                    <tr>
                        <td>1</td>
                        <td class="image-cell">
                          <img src="../public/img/signup-image.jpg" alt="Product 1" class="product-image" data-images='[
                              "../public", 
                              "../public/img/signin-image.jpg", 
                              "../public/img/signin-image.jpg", 
                              "images/product1_4.jpg",
                              "images/product1_5.jpg"
                          ]'>
                      </td>                      
                        <td>Product One</td>
                        <td>Type A</td>
                        <td>500ml</td>
                        <td>$10</td>
                        <td>20</td>
                        <td>20</td>
                        <td>In Stock</td>
                    </tr>
                    <tr>
                        <td>2</td>
                        <td class="image-cell">
                          <img src="../public/img/signin-image.jpg" alt="Product 1" class="product-image" data-images='["images/product1.jpg", "images/product1_2.jpg"]'>
                        </td>
                        <td>Product Two</td>
                        <td>Type B</td>
                        <td>1L</td>
                        <td>$15</td>
                        <td>15</td>
                        <td>15</td>
                        <td>In Stock</td>
                    </tr>
                    <tr>
                        <td>3</td>
                        <td class="image-cell">
                            <img src="images/product3.jpg" alt="Product 3" class="product-image" data-images='["images/product3.jpg", "images/product3_2.jpg"]'>
                        </td>
                        <td>Product Three</td>
                        <td>Type C</td>
                        <td>250ml</td>
                        <td>$7</td>
                        <td>30</td>
                        <td>30</td>
                        <td>In Stock</td>
                    </tr>
                </tbody>
            </table>
        </div>

        <!-- Create New Product Button -->
        <button id="createNewProductBtn">Create New Product</button>

        <!-- Form to Add New Product -->
        <div id="productFormContainer" class="hidden">
            <form id="productForm">
                <div class="form-group">
                    <label for="productName">Product Name:</label>
                    <input type="text" id="productName" name="productName" required>
                </div>

                <div class="form-group">
                    <label for="productPrice">Product Price:</label>
                    <input type="number" id="productPrice" name="productPrice" required>
                </div>

                <div class="form-group">
                    <label for="productLeftCounts">Product Left Counts:</label>
                    <input type="number" id="productLeftCounts" name="productLeftCounts" required>
                </div>

                <div class="form-group">
                    <label for="productCategory">Product Category:</label>
                    <input type="text" id="productCategory" name="productCategory" required>
                </div>

                <div class="form-group">
                    <label for="productSize">Optional Product Size:</label>
                    <select id="productSize" name="productSize">
                        <option value="">Select a size</option>
                        <option value="Small">Small</option>
                        <option value="Medium">Medium</option>
                        <option value="Large">Large</option>
                    </select>
                </div>

                <div class="form-group">
                    <label for="productType">Product Type:</label>
                    <input type="text" id="productType" name="productType" required>
                </div>

                <div class="form-group">
                    <label for="productDescription">Product Description:</label>
                    <textarea id="productDescription" name="productDescription"></textarea>
                </div>

                <div class="form-group">
                    <label for="productDiscountPrice">Product Discount Price:</label>
                    <input type="number" id="productDiscountPrice" name="productDiscountPrice">
                </div>

                <div class="form-group">
                    <label for="productImages">Product Images:</label>
                    <input type="file" id="productImages" name="productImages" multiple accept="image/*">
                    <div id="imagePreview" class="image-preview"></div>
                </div>

                <div class="form-group">
                    <button type="submit">Add Product</button>
                    <button type="button" id="cancelFormBtn">Cancel</button>
                </div>
            </form>
        </div>

    </div>

    <!-- Image Modal -->
    <div id="imageModal" class="modal hidden">
        <div class="modal-content">
            <span class="close">&times;</span>
            <button id="prevImage">&lt;</button>
            <img id="modalImage" src="" alt="Product Image">
            <button id="nextImage">&gt;</button>
        </div>
    </div>

    <script src="../public/js/product.js"></script>
</body>
</html>
